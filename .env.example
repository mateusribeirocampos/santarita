# =============================================================================
# CONFIGURAÇÃO DE VARIÁVEIS DE AMBIENTE - PROJETO SANTA RITA
# =============================================================================
# Copie este arquivo para .env e preencha com suas credenciais reais
# Nunca commite o arquivo .env no Git!

# =============================================================================
# BANCO DE DADOS
# =============================================================================
# PostgreSQL connection string
# Formato: postgresql://username:password@host:port/database_name
DATABASE_URL="postgresql://user:password@localhost:5432/santa_rita_db"

# =============================================================================
# AUTENTICAÇÃO & SEGURANÇA
# =============================================================================
# Secret para JWT tokens (use uma string longa e aleatória)
JWT_SECRET="example_jwt_secret_key_change_in_production_abc123def456"

# Senha do usuário admin padrão
ADMIN_PASSWORD="admin123"

# =============================================================================
# PAGAMENTOS - STRIPE
# =============================================================================
# Chaves do Stripe - Obtenha em https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY="sk_test_example_key_1234567890abcdef"
STRIPE_PUBLISHABLE_KEY="pk_test_example_key_1234567890abcdef"
STRIPE_WEBHOOK_SECRET="whsec_example_webhook_secret_1234567890abcdef"

# Para produção, use:
# STRIPE_SECRET_KEY="sk_live_example_production_key_1234567890abcdef"
# STRIPE_PUBLISHABLE_KEY="pk_live_example_production_key_1234567890abcdef"

# =============================================================================
# INTEGRAÇÃO GITHUB (para agentes MCP)
# =============================================================================
# Personal Access Token do GitHub (obter em: https://github.com/settings/tokens)
# Permissões necessárias: repo, workflow, admin:repo_hook
GITHUB_TOKEN="ghp_example_token_1234567890abcdefghijklmnopqr"

# =============================================================================
# MONITORAMENTO - SENTRY (para agentes MCP)
# =============================================================================
# DSN do Sentry para tracking de erros (obter em: https://sentry.io)
SENTRY_DSN="https://example123@o456789.ingest.sentry.io/987654321"
SENTRY_AUTH_TOKEN="sntryu_example_auth_token_1234567890abcdef"


# =============================================================================
# CONFIGURAÇÕES DE SERVIDOR
# =============================================================================
# Porta do servidor backend
PORT=3000

# URL base do frontend (para CORS)
FRONTEND_URL=http://localhost:5173

# Para produção:
# FRONTEND_URL=https://santaritaourofino.vercel.app

# =============================================================================
# UPLOAD DE ARQUIVOS
# =============================================================================
# Diretório para upload de imagens
UPLOAD_DIR="uploads"

# Tamanho máximo de upload em bytes (5MB)
MAX_FILE_SIZE=5242880

# =============================================================================
# RATE LIMITING
# =============================================================================
# Máximo de requisições por IP por janela de tempo
RATE_LIMIT_MAX=100

# Janela de tempo em minutos
RATE_LIMIT_WINDOW=15

# =============================================================================
# CONFIGURAÇÕES ADICIONAIS
# =============================================================================
# Ambiente da aplicação (development, production, test)
NODE_ENV="development"

# URL base da API (para desenvolvimento local)
API_BASE_URL="http://localhost:3000"

# Configuração de timezone
TZ="America/Sao_Paulo"