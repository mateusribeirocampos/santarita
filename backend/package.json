{
  "name": "santa-rita-backend",
  "version": "1.0.0",
  "description": "Backend completo para a Igreja Santa Rita com Prisma e Stripe",
  "main": "src/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:js": "nodemon src/server.js",
    "build": "tsc && npx prisma generate",
    "postinstall": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:push": "npx prisma db push",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^6.11.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.1",
    "he": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "stripe": "^14.18.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/he": "^1.2.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.1",
    "nodemon": "^3.1.10",
    "prisma": "^6.11.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
