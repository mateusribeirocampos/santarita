{
  "name": "santa-rita-backend",
  "version": "1.0.0",
  "description": "Backend completo para a Igreja Santa Rita com Prisma e Stripe",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "build": "tsc && npx prisma generate",
    "build:prod": "tsc && npx tsc-alias",
    "build:render": "npm run type-check && tsc && npx tsc-alias && ls -la dist/",
    "start:prod": "node dist/server.js",
    "postinstall": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:push": "npx prisma db push",
    "db:seed": "ts-node prisma/seed.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist/"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.11.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/he": "^1.2.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.4.1",
    "he": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "stripe": "^14.18.0",
    "tsc-alias": "^1.8.16"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "prisma": "^6.11.0",
    "ts-node": "^1.7.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
